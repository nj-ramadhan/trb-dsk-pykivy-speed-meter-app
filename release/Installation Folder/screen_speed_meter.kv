#:kivy 2.1.0

<ScreenSpeedMeter>:
    MDBoxLayout:
        orientation: "vertical"

		# header layout
        MDBoxLayout:
            id: header_layout
            orientation: "horizontal"
            padding: 20
			spacing: 20
			size_hint_y: 0.2
			md_bg_color: "#111111"
                    
            Image:
                id: logo
                source:'assets/images/logo-trb.png'
                size_hint_x: 0.15
                allow_stretch: True 

			MDBoxLayout:
				orientation: "vertical"
				size_hint_x: 0.7

				MDLabel:
					id: title            
					text: "VEHICLE INSPECTION INTEGRATION MANAGEMENT SYSTEM"
					halign: "left"
					valign: "middle"
					font_style: 'H4'
					theme_text_color: "Custom"
					text_color: "#FFFFFF"

				MDLabel:
					id: subtitle            
					text: "SPEED METER"
					halign: "left"
					valign: "middle"
					font_style: 'H5'
					theme_text_color: "Custom"
					text_color: "#FFFFFF"

			MDBoxLayout:
				orientation: "vertical"
				size_hint_x: 0.15

				MDLabel:
					id: lb_time
					text: "12:34:00"
					halign: "center"
					valign: "middle"
					font_style: 'H6'
					theme_text_color: "Custom"
					text_color: "#FFFFFF"

				MDLabel:
					id: lb_date
					text: "17/08/2024"
					halign: "center"
					valign: "middle"
					font_style: 'H6'
					theme_text_color: "Custom"
					text_color: "#FFFFFF"

				MDLabel:
					id: lb_operator
					text: "Nama Operator"
					halign: "center"
					valign: "middle"
					font_style: 'H6'
					theme_text_color: "Custom"
					text_color: "#FFFFFF"

				MDLabel:
					id: lb_comm
					text: "Status : Disconnected"
					halign: "center"
					valign: "middle"
					font_style: 'H6'
					theme_text_color: "Custom"

		# main layout
		MDBoxLayout:
			id: layout_main
			orientation: "horizontal"
			size_hint_y: 0.7
			padding:20
			spacing:20

			MDBoxLayout:
				id: layout_display
				orientation: "horizontal"
						
				MDBoxLayout:
					orientation: "vertical"
					size_hint_x: 0.5
					padding:20
					spacing:20

					MDBoxLayout:
						orientation: "vertical"
						size_hint_y: 0.75
						spacing:10

						MDLabel:
							text: "IDENTITAS KENDARAAN"
							halign: "center"
							valign: "middle"
							font_style: 'H6'

						MDBoxLayout:
							orientation: "horizontal"
							MDLabel:
								text: "No. Antrian"
								halign: "left"
								valign: "middle"
								font_style: 'H6'
							MDLabel:
								id: lb_no_antri
								halign: "left"
								valign: "middle"
								font_style: 'H6'

						MDBoxLayout:
							orientation: "horizontal"
							MDLabel:
								text: "No. Polisi"
								halign: "left"
								valign: "middle"
								font_style: 'H6'
							MDLabel:
								id: lb_no_pol
								halign: "left"
								valign: "middle"
								font_style: 'H6'

						MDBoxLayout:
							orientation: "horizontal"
							MDLabel:
								text: "No. Uji"
								halign: "left"
								valign: "middle"
								font_style: 'H6'
							MDLabel:
								id: lb_no_uji
								halign: "left"
								valign: "middle"
								font_style: 'H6'

						MDBoxLayout:
							orientation: "horizontal"
							MDLabel:
								text: "Status Uji"
								halign: "left"
								valign: "middle"
								font_style: 'H6'
							MDLabel:
								id: lb_sts_uji
								halign: "left"
								valign: "middle"
								font_style: 'H6'

						MDBoxLayout:
							orientation: "horizontal"
							MDLabel:
								text: "Merk"
								halign: "left"
								valign: "middle"
								font_style: 'H6'
							MDLabel:
								id: lb_merk
								halign: "left"
								valign: "middle"
								font_style: 'H6'

						MDBoxLayout:
							orientation: "horizontal"
							MDLabel:
								text: "Type"
								halign: "left"
								valign: "middle"
								font_style: 'H6'
							MDLabel:
								id: lb_type
								halign: "left"
								valign: "middle"
								font_style: 'H6'

						MDBoxLayout:
							orientation: "horizontal"
							MDLabel:
								text: "Jenis Kendaraan"
								halign: "left"
								valign: "middle"
								font_style: 'H6'
							MDLabel:
								id: lb_jns_kend
								halign: "left"
								valign: "middle"
								font_style: 'H6'

						MDBoxLayout:
							orientation: "horizontal"
							MDLabel:
								text: "JBB"
								halign: "left"
								valign: "middle"
								font_style: 'H6'
							MDLabel:
								id: lb_jbb
								halign: "left"
								valign: "middle"
								font_style: 'H6'

						MDBoxLayout:
							orientation: "horizontal"
							MDLabel:
								text: "Bahan Bakar"
								halign: "left"
								valign: "middle"
								font_style: 'H6'
							MDLabel:
								id: lb_bhn_bkr
								halign: "left"
								valign: "middle"
								font_style: 'H6'

						MDBoxLayout:
							orientation: "horizontal"
							MDLabel:
								text: "Status Uji"
								halign: "left"
								valign: "middle"
								font_style: 'H6'
							MDLabel:
								id: lb_warna
								halign: "left"
								valign: "middle"
								font_style: 'H6'

					MDLabel:
						id: lb_test_result
						halign: "center"
						valign: "middle"
						theme_text_color: "Custom"
						font_style: 'H3'
						size_hint_y: 0.25

				MDBoxLayout:
					orientation: "vertical"
					size_hint_x: 0.5

					MDFloatLayout:
						id: layout_display
						AsyncImage:
							source: 'assets/images/display-speed.png'
							pos_hint: {'x':.0, 'y':-0.06}
							fit_mode: 'contain' #scale-down, fill, contain, cover						

						MDLabel:
							id: lb_test_subtitle
							text: "MEMULAI PENGUKURAN"
							halign: "center"
							valign: "middle"
							font_style: 'H6'
							pos_hint: {'x':.0, 'y':.45}

						MDLabel:
							id:lb_speed_val
							text: "..."
							halign: "center"
							valign: "middle"
							font_style: 'Display'
							font_size: '50dp'
							pos_hint: {'x':0.0, 'y':0.0}

						MDLabel:
							text: "rpm"
							halign: "center"
							valign: "middle"
							font_style: 'Display'
							font_size: '30dp'
							pos_hint: {'x':0.20, 'y':0.0}

						# MDRectangleFlatIconButton:
						# 	id: bt_cylinder_up
						# 	text: "CYLINDER"
						# 	icon: "arrow-up"
						# 	theme_text_color: "Custom"
						# 	text_color: "#EEEEEE"
						# 	md_bg_color: "#FF2A2A"
						# 	pos_hint: {'x':0.170, 'y':0.57}
						# 	on_press: root.exec_cylinder_up()
						# 	on_release: root.exec_cylinder_stop()

						# MDRectangleFlatIconButton:
						# 	id: bt_cylinder_down
						# 	text: "CYLINDER"
						# 	icon: "arrow-down"
						# 	theme_text_color: "Custom"
						# 	text_color: "#EEEEEE"
						# 	md_bg_color: "#2CA02C"
						# 	pos_hint: {'x':0.170, 'y':0.47}
						# 	on_press: root.exec_cylinder_down()
						# 	on_release: root.exec_cylinder_stop()

						MDRectangleFlatIconButton:
							id: bt_reload
							text: "ULANGI"
							icon: "reload"
							theme_text_color: "Custom"
							text_color: "#EEEEEE"
							md_bg_color: "#FF2A2A"
							pos_hint: {'x':.275, 'y':.06}
							disabled: True
							on_press: root.exec_reload()

						MDRectangleFlatIconButton:
							id: bt_save
							text: "SIMPAN"
							icon: "printer"
							theme_text_color: "Custom"
							text_color: "#EEEEEE"
							md_bg_color: "#2CA02C"
							pos_hint: {'x':.425, 'y':.06}
							disabled: True
							on_press: root.exec_save()

						MDRectangleFlatIconButton:
							id: bt_back
							text: "KEMBALI"
							icon: "arrow-left"
							theme_text_color: "Custom"
							md_bg_color: "4471C4"
							text_color: "#EEEEEE"
							md_bg_color: "4471C4"
							pos_hint: {'x':.575, 'y':.06}
							on_press: root.open_screen_main()
									
		# footer layout
        MDBoxLayout:
            orientation: "horizontal"
			size_hint_y: 0.1

			MDBoxLayout:
				orientation: "horizontal"
				padding: 20
				spacing: 20
				md_bg_color: "#4471C4"
				size_hint_x: 0.4
				
				AsyncImage:
					id: img_pemkab
					source:'assets/images/logo-sorong.png'
					size_hint_x: 0.1
					allow_stretch: True  

				AsyncImage:
					id: img_dishub
					source:'assets/images/logo-dishub.png'
					size_hint_x: 0.1
					allow_stretch: True  

				MDBoxLayout:
					orientation: "vertical"
					size_hint_x: 0.8

					MDLabel:
						id: lb_pemkab
						text: "PEMERINTAH KABUPATEN SORONG"
						halign: "left"
						valign: "middle"
						theme_text_color: "Custom"
						text_color: "#EEEEEE"						
						font_style: 'Subtitle1'

					MDLabel:
						id: lb_dishub
						text: "DINAS PERHUBUNGAN"
						halign: "left"
						valign: "middle"
						theme_text_color: "Custom"
						text_color: "#EEEEEE"
						font_style: 'Subtitle1'

					MDLabel:
						id: lb_unit			
						text: "UNIT PELAKSANA UJI BERKALA KENDARAAN BERMOTOR"
						halign: "left"
						valign: "middle"
						theme_text_color: "Custom"
						text_color: "#EEEEEE"
						font_style: 'Subtitle1'

					MDLabel:
						id: lb_unit_address
						text: " Klamasen, Distrik Mariat, Kabupaten Sorong, Papua Barat Daya. 98416"
						halign: "left"
						valign: "middle"
						md_bg_color: "#EEEEEE"
						theme_text_color: "Custom"
						text_color: "#000000"
						font_style: 'Subtitle1'

			MDBoxLayout:
				orientation: "vertical"
				padding: 20
				spacing: 20
				md_bg_color: "#FFC000"
				size_hint_x: 0.6

				MDLabel:			
					text: "INFORMASI"
					halign: "left"
					valign: "middle"
					font_style: 'H5'

				MDLabel:
					id: lb_info
					text: "SPEED TEST"
					halign: "left"
					valign: "middle"
					font_style: 'H6'